<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WrapStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BigText" parent="WrapStyle">
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ClickableText" parent="BigText">
        <item name="android:clickable">true</item>
    </style>

    <style name="ShortClickableText" parent="ClickableText">
        <item name="android:textSize">18sp</item>
        <item name="android:minWidth">25dp</item>
    </style>

    <style name="TinyText" parent="WrapStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
    </style>



</resources>